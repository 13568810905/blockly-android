<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="BlocklyTheme" parent="AppTheme">
        <item name="blockViewStyle">@style/DefaultBlockStyle</item>
        <item name="fieldLabelStyle">@style/DefaultFieldLabelStyle</item>
        <item name="minScale">0.5</item>
        <item name="maxScale">2.5</item>
        <item name="defaultScale">1.0</item>
    </style>

    <style name="DefaultBlockStyle">
        <item name="fieldHorizontalPadding">8dp</item>
        <item name="fieldVerticalPadding">8dp</item>
        <item name="minBlockHeight">48dp</item>
        <item name="innerPadding">8dp</item>
    </style>

    <style name="DefaultFieldStyle">
        <item name="textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="fieldMinHeight">24dip</item>
        <item name="fieldMinWidth">24dip</item>
    </style>
    <style name="DefaultFieldLabelStyle" parent="DefaultFieldStyle"/>

    <style name="BlocklyTestTheme" parent="AppTheme">
        <item name="blockViewStyle">@style/TestBlockStyle</item>
        <item name="fieldLabelStyle">@style/TestFieldLabelStyle</item>
    </style>

    <style name="TestBlockStyle" parent="DefaultBlockStyle">
        <item name="fieldHorizontalPadding">12dp</item>
        <item name="fieldVerticalPadding">16dp</item>
    </style>

    <style name="TestFieldLabelStyle" parent="DefaultFieldLabelStyle">
        <item name="textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="fieldMinHeight">128dip</item>
    </style>

</resources>
